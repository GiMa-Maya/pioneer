{
  "npmClient": "yarn",
  "command": {
    "publish": {
      "message": "pioneer(release): version %v",
      "ignoreChanges": [
        "**/*.md",
        "**/lib/**"
      ]
    }
  },
  "packages": [
    "modules/**/**/*",
    "services/**/*",
    "apps/**/*",
    "e2e/**/**/*"
  ],
  "version": "independent",
  "useWorkspaces": true
}
